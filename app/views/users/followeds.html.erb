  <h2>User follows members</h2>
  <!-- 開始_ユーザーの情報一覧 -->
    <table class='table'>
    <tr>
      <th> image </th>
      <th> name  </th>
      <th colspan="3"></th>
    </tr>

   <% @users.each do |user| %>
   <tr>
      <td><%= image_tag user.get_profile_image(40,40) %></td>
    	<td><%= user.name %></td>
    	<td>フォロー数：<%= user.followeds.count %></td>
    	<td>フォロワー数：<%= user.followers.count %></td>
    	 <td><%= link_to 'Show', user_path(user.id), class: "user_#{user.id}" %></td>
   <% end %>
  </tr>
  </table>



<!-- 終了_ユーザーの情報一覧 -->