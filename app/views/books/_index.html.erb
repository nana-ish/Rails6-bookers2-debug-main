<table class='table table-hover table-inverse'>

  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to(book.user) do %>
          <%= image_tag book.user.get_profile_image(50,50) %>
          <% end %>
        </td>
        <td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
        <td><%= book.body %></td>
        <td>
          <% if book.favorited_by?(current_user)%><!--既にいいねを押したuserの場合再度リンクを押すことによって良いねを削除-->
            <%= link_to book_favorite_path(book,book.favorites), method: :delete, class: "favorite_btn" do %>
             ♥<%= book.favorites.count %> いいね  <!--ここで使われているfavoritesはbookモデルのアソシエーションで定義されている。-->
            <% end %>
          <% else %><!--まだいいねを押していなかったら、リンクを押すことによっていいねを追加-->
            <%= link_to book_favorites_path(book), method: :post, class: "favorite_btn" do %>
             ♡<%= book.favorites.count %> いいね
            <% end %>
          <% end  %>
        </td>
        <td>コメント数：<%=book.book_comments.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>