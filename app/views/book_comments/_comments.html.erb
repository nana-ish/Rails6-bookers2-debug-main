<h2>comments</h2>
<table class="table">
   <tr>
    <th>user </th>
    <th>comment</th>
    <th colspan="1"></th>
   </tr>
  <% book_comments.each do |book_comment| %>
   <tr>
      <td><%= book_comment.user.name %></td>                          <!--コメントを投稿したuserの情報-->
      <td> <%= book_comment.book_comment %></td>                      <!--コメント-->
      <%if book_comment.user_id == current_user.id %>
      <td>
       <%= link_to 'Destroy', book_book_comment_path(book_comment.book,book_comment), method: :delete, remote:true, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%>
      </td>
      <% else %>
      <td></td>
      <% end %>
   </tr>
  <% end %>
</table>